<section class="showcase my-5">
    <div class="container">
        <div class="pb-2 mt-5 mb-2 border-bottom">
            <h2>Gestisci le tue risorse <a class="btn btn-info float-right btn-sm" href="/employee"><i class="bi bi-plus-circle-fill"></i></i> Aggiungi</a></h2>
        </div>

        <div class="row">
            <div class="col">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>Email</th>
                            <th>Telefono</th>
                            <th>Indirizzo</th>
                            <th>Retribuzione</th>
                            <th>GESTISCI</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each emplist}}
                        <tr>
                            <td>{{this.full_name}}</td>
                            <td>{{this.email}}</td>
                            <td>{{this.mobile}}</td>
                            <td>{{this.address}}</td>
                            <td>{{this.salary}}</td>
                            <td>
                                <a href="/employee/{{this._id}}"><i class="bi bi-pencil-fill"></i></a>
                                <a href="/employee/delete/{{this._id}}"
                                    onclick="return confirm('Vuoi davvero cancellare il record?');"><i class="bi bi-trash3-fill"></i></a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>